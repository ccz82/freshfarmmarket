@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-xl-6">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h1>@ViewData["Title"]</h1>
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder />
                <label asp-for="Input.FullName" class="form-label">Full Name</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CreditCardNumber" class="form-control" placeholder />
                <label asp-for="Input.CreditCardNumber" class="form-label">Credit Card Number</label>
                <span asp-validation-for="Input.CreditCardNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Gender" class="form-label">Gender</label>
                <select asp-for="Input.Gender" class="form-select" style="height: 51px;">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                    <option value="Prefer not to say">Prefer not to say</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.MobileNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.MobileNumber" class="form-label">Mobile Number</label>
                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DeliveryAddress" class="form-control" placeholder />
                <label asp-for="Input.DeliveryAddress" class="form-label">Delivery Address</label>
                <span asp-validation-for="Input.DeliveryAddress" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.Photo" class="form-label">Photo</label>
                <input asp-for="Input.Photo" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.Photo" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Input.AboutMe" class="form-control" style="height: 120px"></textarea>
                <label asp-for="Input.AboutMe">About Me</label>
                <span asp-validation-for="Input.AboutMe" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
